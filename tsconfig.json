{
  "compilerOptions": {
	"module": "commonjs",
	"esModuleInterop": true,
	"target": "es6",
	"noImplicitAny": true,
	"moduleResolution": "node",
	"sourceMap": true,
	"outDir": "dist",
	"baseUrl": ".",
	"noImplicitThis": true,
	"noImplicitReturns": true,
	"noUnusedLocals": true,
	"noUnusedParameters": true,
	"strictNullChecks": true,
	"strictFunctionTypes": true,
	"strictPropertyInitialization": true,
	"paths": {
	  "*": [
		"node_modules/*",
		"src/types/*"
	  ]
	}
  },
  "include": [
	"src/**/*"
  ]
}
