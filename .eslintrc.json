{
  "root": true,
  "plugins": [
	"import",
	"eslint-plugin",
	"@typescript-eslint",
	"jest"
  ],
  "env": {
	"es6": true,
	"node": true,
	"jest": true
  },
  "extends": [
	"eslint:recommended",
	"airbnb-base",
	"plugin:@typescript-eslint/recommended",
	"plugin:jest/recommended"
  ],
  "globals": {
	"Atomics": "readonly",
	"SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
	"ecmaVersion": 2018,
	"sourceType": "module"
  },
  "rules": {},
  "settings": {
	"import/resolver": {
	  "typescript": {},
	  "node": {
		"paths": [
		  "src"
		],
		"extensions": [
		  ".js",
		  ".jsx",
		  ".ts",
		  ".tsx"
		]
	  }
	}
  }
}
